{
  "preset": "ts-jest",
  "testEnvironment": "node",
  "testRegex": "^(?!.*__tests__).*\\.spec\\.ts$",
  "collectCoverage": true,
  "coverageDirectory": "./test-coverage",
  "coverageReporters": ["cobertura"],
  "collectCoverageFrom": [
    "**/stores/*.ts",
    "!**/node_modules/**"
  ],
  "reporters": [
    "default",
    [
      "jest-junit",
      {
        "outputDirectory": "./test-results",
        "outputName": "clientside-unittest-results.xml"
      }
    ]
  ]
}
